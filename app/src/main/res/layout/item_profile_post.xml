<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/profile_post_item_name"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="120dp"
        tools:text="John Doe" />

    <TextView
        android:id="@+id/rating_item_divider"
        style="@style/AppTheme.TextDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/profile_post_item_name"
        android:text="@string/divider_bullet" />

    <TextView
        android:id="@+id/rating_item_date"
        style="@style/AppTheme.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rating_item_divider"
        android:layout_toStartOf="@+id/rating_item_rating"
        tools:text="9/27/2017" />

    <me.zhanghai.android.materialratingbar.MaterialRatingBar
        android:id="@+id/rating_item_rating"
        style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/profile_post_item_text"
        style="@style/AppTheme.Subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_post_item_name"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        tools:text="I thought it was pretty great! And I really have a ton to say wow." />

    <View
        style="@style/AppTheme.Divider"
        android:layout_below="@id/profile_post_item_text"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp" />
</RelativeLayout>
